<?xml version="1.0" encoding="utf-8"?><!--My thinking:  FrameLayout:  VideoPlayerFrameLayout + ScrollView-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.daasuu.exoplayerfilter.MovieWrapperView
        android:id="@+id/layout_movie_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--transparent gray area, with white items-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:orientation="vertical">


            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/pause" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/background_dark" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">



                <Spinner
                    android:id="@+id/image2dor3dformat_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/choose_videofile_toprocess_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="chooseVideoFileToProcess"
                    android:text="Choose Video File to Reformat"
                    />

                <TextView
                    android:id="@+id/choosenfilename_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chosen File: " />



                <!--The 4 below are not needed now-->
                <TextView
                    android:id="@+id/rescalesize_width_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rescale Frame Size to Width: "
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/rescalesize_width_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1920"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/rescalesize_height_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rescale Frame Size to Height: "
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/rescalesize_height_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1080"
                    android:visibility="gone" />




            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
