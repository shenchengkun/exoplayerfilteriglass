<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <AutoCompleteTextView
        android:theme="@style/Base.TextAppearance.AppCompat.SearchResult"
        android:textColor="#000"
        android:textColorHint="#34495e"
        android:id="@+id/playtxt"
        android:background="@drawable/picb46"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:hint="Search"
        android:textSize="40dp"
        android:lines="1"
        android:drawableRight="@drawable/search72"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="60dp"
        android:drawSelectorOnTop="true"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="1dp"
        android:layout_below="@+id/playtxt"
        android:layout_alignParentLeft="true"
        android:fastScrollAlwaysVisible="false"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/back_to_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_weight="1"/>

<!--
        <Button
            android:id="@+id/hideYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOCK"
            android:layout_weight="1"
            android:onClick="youtubeLock" />-->
        <Button
            android:id="@+id/switchMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2D/3D"
            android:layout_weight="1"
            android:onClick="youtubeModeSwitch"/>

        <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
